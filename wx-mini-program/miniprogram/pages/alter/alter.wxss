/* pages/alter/alter.wxss */

page {
  display: flex;
  flex-direction: column;
  /*justify-content: space-between;  确保内容在顶部和底部标签栏之间均匀分布 */
  height: 100vh; /* 让页面占据整个视窗高度 */
}

.container{
  flex: 1; 
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* 内容顶部对齐 */
  align-items: center; /* 水平居中 */
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 底部安全区适配 */
  padding-bottom: env(safe-area-inset-bottom); /* iOS 底部安全区适配 */
  background-color: rgb(28, 29, 33); /* #2a2b2c; 设置背景颜色 */
}

.container text {
  font-family: 'Heiti SC', 'SimHei', sans-serif;
}

/* 外部框的样式 */
.form-outer-box {
  border-radius: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 90%; /* 根据需要调整宽度 */
  height: 89%; /* 根据需要调整高度 */
  max-width: 400px; /* 最大宽度限制 */
  overflow: hidden; /* 确保内部元素不会超出边界 */
  padding: 0px; /* 内边距 */
  margin-top: 70rpx;
  background-color: rgb(235, 236, 243); /* 背景颜色 */
}

.head{
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  margin-top: 0px;
  margin-bottom: 20px;
  background-color: rgb(49, 53, 61);
  color: rgb(238, 239, 247) ;
  font-size: 40rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.container button {
  width: 100%;
  height: 65px;
  border:1px, rgb(171, 176, 182);
  flex: 1;
  display: flex;
  flex-direction: row; /* 水平排列 */
  align-items: center;
  padding-left: 25px;
  margin-bottom: 10px;
  background-color: rgb(238, 239, 247); /* 背景颜色 */
  font-size: 36rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  color: rgb(28, 29, 33);
  font-family: 'Heiti SC', 'SimHei', sans-serif;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  width: 80%;
}

.form-group {
  margin-bottom: 20px;
}

label {
  font-size: 20px;
  display: block;
  margin-bottom: 15px;
  font-weight: bold;
}

.input-field {
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
  width: calc(100% - 40px); /* 减少宽度，留出空间给padding */
  box-sizing: border-box; /* 确保padding不会影响宽度 */
  margin-bottom: 10px; 
}
.modal-buttons {
  display: flex;
  flex-direction:center;
  align-items: center; /* 水平居中 */
  justify-content: space-between; /* 使两个按钮之间有间隔 */
}

.modal-buttons button {
  display: flex;
  flex-direction:center;
  align-items: center; /* 水平居中 */
  margin-top: 10px;
  flex: 1; /* 让每个按钮占据相等的空间 */
  margin-right: 50px; /* 给右边的按钮添加一些间距 */
  width: 20%;
  height: 40px;
  font-size: 18px;
}