<!--pages/record/record.wxml-->
<view class="container">
  <view class="form-outer-box"> 
    <view class="head"> 
      <text>历史记录</text>
    </view>
    <!-- 显示加载中的提示 -->
    <view wx:if="{{loading}}" class="reminder">正在加载...</view>
    <!-- 如果没有数据时显示提示信息 -->
    <view wx:elif="{{!loading && (!records || records.length == 0)}}" class="reminder">暂无数据</view>
    <view class="record-item">
      <block wx:for="{{records}}" wx:key="_id">
        <button bindtap="toggleDetails" data-id="{{item._id}}">{{item.date}}</button>
      </block>
    </view>
  </view>
</view>