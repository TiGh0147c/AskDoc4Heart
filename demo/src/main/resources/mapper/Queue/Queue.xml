<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.Queue.mapper.QueueMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.Queue.entity.Queue">
        <id column="queue_id" property="queueId"/>
        <result column="queue_number" property="queueNumber"/>
        <result column="user_number" property="userNumber"/>
        <result column="join_queue_time" property="joinQueueTime"/>
        <result column="exit_queue_time" property="exitQueueTime"/>
        <result column="queue_status" property="queueStatus"/>
        <result column="user_id" property="userId"/>
        <result column="counselor_id" property="counselorId"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="queueId">
        INSERT INTO Queue(queue_number, user_number, user_id, counselor_id, queue_status, join_queue_time)
        VALUES(#{queueNumber}, #{userNumber}, #{userId}, #{counselorId}, #{queueStatus}, #{joinQueueTime})
    </insert>

    <select id="selectById" resultMap="com.example.demo.Queue.entity.Queue">
        SELECT * FROM Queue WHERE queue_id = #{queueId}
    </select>

    <select id="selectByUserId" resultMap="com.example.demo.Queue.entity.Queue">
        SELECT * FROM Queue WHERE user_id = #{userId} ORDER BY join_queue_time DESC
    </select>

    <select id="selectCurrentQueue" resultMap="com.example.demo.Queue.entity.Queue">
        SELECT * FROM Queue
        WHERE counselor_id = #{counselorId} AND queue_status = 'waiting'
        ORDER BY queue_number ASC
    </select>


    <!-- 选择所有处于活动状态的队列条目 -->
    <select id="selectActiveQueues" resultType="com.example.demo.Queue.entity.Queue">
        SELECT * FROM queue WHERE queue_status IN ('waiting', 'processing')
    </select>

    <update id="updateById">
        UPDATE Queue SET
        queue_status = #{queueStatus},
        exit_queue_time = #{exitQueueTime}
        WHERE queue_id = #{queueId}
    </update>


    <!-- 统计指定咨询师的所有排队人数（仅包括waiting状态） -->
    <select id="countTotalWaitingUsers" resultType="int" parameterType="int">
        SELECT COUNT(*) FROM queue WHERE counselor_id = #{counselorId} AND queue_status = 'waiting'
    </select>

    <!-- 计算指定用户前面有多少人在等待（仅包括waiting状态） -->
    <select id="countAheadUsers" resultType="int">
        SELECT COUNT(*) FROM Queue
        WHERE counselor_id = #{counselorId}
        AND queue_number &lt; #{currentNumber}
        AND queue_status = 'waiting'
        AND join_queue_time &lt; #{joinTime}
    </select>

    <select id="selectNextPatient" resultMap="com.example.demo.Queue.entity.Queue">
        SELECT * FROM Queue
        WHERE counselor_id = #{counselorId} AND queue_status = 'waiting'
        ORDER BY queue_number ASC LIMIT 1
    </select>
    <!-- 选择并锁定最后一个队列编号以便更新 -->
    <select id="selectLastQueueNumberForUpdate" resultType="Integer">
        SELECT MAX(queue_number) FROM Queue
        WHERE counselor_id = #{counselorId} FOR UPDATE
    </select>

    <!-- 查询指定咨询师的所有队列条目，包含已取消的用户 -->
    <select id="selectAllQueuesForCounselor" resultType="com.example.demo.Queue.entity.Queue" parameterType="int">
        SELECT * FROM queue WHERE counselor_id = #{counselorId}
    </select>

    <!-- 查询所有的队列条目，包括已取消的用户 -->
    <select id="selectAllQueues" resultType="com.example.demo.Queue.entity.Queue">
        SELECT * FROM queue
    </select>

    <!-- 清空所有队列条目 -->
    <delete id="clearAllQueues">
        DELETE FROM queue
    </delete>

    <!-- 根据咨询师ID清空队列条目 -->
    <delete id="clearQueueByCounselorId" parameterType="int">
        DELETE FROM queue WHERE counselor_id = #{counselorId}
    </delete>
</mapper>